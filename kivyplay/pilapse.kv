<MotorsScreen>:
	id: motor_manager
	Accordion:
		id: tabs_manager
		slide_tab: slide_tab
		pan_tab: pan_tab
		tilt_tab: tilt_tab
		new_tab: new_tab
		manager: root.manager
		AccordionItem:
			title: 'SLIDE'
			SlideTab:
				id: slide_tab
				manager: motor_manager.manager
		AccordionItem:
			title: 'PAN'
			PanTab:
				id: pan_tab
				manager: motor_manager.manager
		AccordionItem:
			title: 'TILT'
			TiltTab:
				id: tilt_tab
				manager: motor_manager.manager
		AccordionItem:
			title: 'NEW'
			StepperMotor:
				id: new_tab
				manager: motor_manager.manager

<HomeScreen>:
	BoxLayout:
		orientation: 'vertical'
		spacing: 5
		padding: 5
		Label:
			text: "HOME"
		BoxLayout:
			orientation: 'horizontal'
			spacing: 5
			padding: 5
			Button:
				text: 'BTN A'
				on_press: root.display('A')
			Button:
				text: 'BTN B'
				on_press: root.display('B')
			Button:
				text: 'BTN C'
				on_press: root.display('C')
		Button:
			text: 'NEXT'
			on_press: root.manager.current = 'motors'

<Manager>:
	canvas.before:
		Color:
			rgb: .2, .2, .2
		Rectangle:
			size: self.size
	id: screen_manager
	home_screen: home_screen
	motors_screen: motors_screen

	HomeScreen:
		id: home_screen
		name: 'home'
		manager: screen_manager
	MotorsScreen:
		id: motors_screen
		name: 'motors'
		manager: screen_manager
        



	