<TimelapseSimple_B>:
	main_widget: main_widget
	movement_btn: movement_btn
	BoxLayout:
		orientation: 'vertical'
		spacing: 5
		PageTitle
    		title: root.page_title
		BoxLayout:
			id: main_widget
			orientation: 'horizontal'
			padding: 5
			size_hint: 1, 0.5
			Button:
				text: root.set_point
				font_size: 35
				id: movement_btn
				on_press: root.set_move_points()
		BoxLayout:
			orientation: 'horizontal'
			spacing: 5
			padding: 5
			size_hint: 1, 0.5 
			Button:
				text: 'BACK'
				font_size: 35
				on_press: root.manager.current = 'timelapse_simpleA'
			Button: 
				text: 'RESET'
				font_size: 35
				on_press: root.reset_timelapse()
			Button:
				text: 'READY'
				font_size: 35
				on_press: root.manager.current = 'timelapse_simpleC'
