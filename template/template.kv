<ScreenOne>:
    BoxLayout:
    	orientation: 'vertical'
    	BoxLayout:
    		Button:
    			text: "Shutter"
    			on_press: root.read_txd()
    		Button:
    			text: "READ RXD"
    			on_press: root.read_rxd()
    		Button:
    			text: "READ STOP"
    			on_press: root.read_stop()
		BoxLayout:
			Button:
    			text: "TEST"
    			on_press: root.test()
			Button:
				text: "EXIT"
				on_press: root.exit()



<Manager>:
    id: screen_manager
    screen_one: screen_one
    ScreenOne:
        id: screen_one
        name: 'first_screen'
        manager: screen_manager
